{
  "expo": {
    "name": "Smart School Parent",
    "slug": "smart-school-parent",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smartschool.parent",
      "buildNumber": "1.0.0",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location to track school buses",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to location to track school buses",
        "UIBackgroundModes": ["location", "fetch", "remote-notification"],
        "NSCameraUsageDescription": "This app uses camera to scan QR codes",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to upload profile pictures",
        "NSUserNotificationUsageDescription": "This app needs permission to send you notifications about your children"
      },
      "entitlements": {
        "aps-environment": "development"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "package": "com.smartschool.parent",
      "versionCode": 1,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.RECORD_AUDIO",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Smart School Parent",
      "description": "Parent portal for Smart School Transport System"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#667eea",
          "sounds": ["./assets/notification.wav"]
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "extraMavenRepos": ["../../node_modules/@react-native-firebase/messaging/android/libs"]
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Smart School Parent to use your location to track school buses.",
          "locationAlwaysPermission": "Allow Smart School Parent to track buses in the background.",
          "locationWhenInUsePermission": "Allow Smart School Parent to use your location to track school buses."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Smart School Parent to access your photos to upload profile pictures."
        }
      ],
      "expo-splash-screen"
    ],
    "extra": {
      "eas": {
        "projectId": "3d259149-f708-4356-bc99-899f3b7f2fa6"
      }
    },
    "owner": "wizzysley",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "description": "Parent mobile application for Smart School Transport & Attendance System"
  }
}